{{<layout}}
{{$content}}
<div class="pure-g">
    <div class="pure-u-1">
        <table class="pure-table pure-table-striped width-max">
            <thead>
            <tr>
                <th style="width: 20%">Key</th>
                <th style="width: 80%">Value</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Version</td>
                <td>{{version}}</td>
            </tr>
            <tr>
                <td>Java</td>
                <td>{{jvm}}</td>
            </tr>
            <tr>
                <td>Processes</td>
                <td>{{processCount}}</td>
            </tr>
            <tr>
                <td>Workers</td>
                <td>{{workerCount}}</td>
            </tr>
            <tr>
                <td>Tasks</td>
                <td>{{taskCount}}</td>
            </tr>
            <tr>
                <td>Answers</td>
                <td>{{answerCount}}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
{{/content}}
{{/layout}}
